export DOCKER_REPO_PREFIX=lukewaite

aws(){
	docker run -it --rm \
		-v "${HOME}/.aws:/root/.aws" \
		-v "${HOME}/Downloads:/root/Downloads" \
		--log-driver none \
		--name aws \
		${DOCKER_REPO_PREFIX}/awscli "$@"
}

aws2(){
	docker run -it --rm \
		-v "${HOME}/.aws:/root/.aws" \
		-v "${HOME}/Downloads:/root/Downloads" \
        -v "$(pwd):/root/aws-cli-workspace" \
        -w "/root/aws-cli-workspace" \
		--log-driver none \
		--name aws-$(date "+%s")     \
		amazon/aws-cli "$@"
}

aws-shell(){
	docker run -it --rm \
		-v "${HOME}/.aws:/root/.aws" \
		-v "${HOME}/Downloads:/root/Downloads" \
		--log-driver none \
		--name aws-shell \
		${DOCKER_REPO_PREFIX}/aws-shell "$@"
}

eb(){
	docker run -it --rm \
		-v "${HOME}/.aws:/root/.aws" \
		-v "${HOME}/.ssh/:/root/.ssh/" \
		-v "${HOME}/Downloads:/root/Downloads" \
		-v /var/run/docker.sock:/var/run/docker.sock \
		-v "$(pwd):/root/aws-elasticbeanstalk-workspace" \
		--log-driver none \
